@model EmailTemplateViewModel
@using SystemSupport.Web
@using SystemSupport.Web.Controllers
@using DecisionCritical.Core.Html.FubuUI

@{ Layout = "~/Views/Shared/_FormLayout.cshtml"; }
    
@section HeaderJavascript{
      extraFormOptions = {editorOptions:{width:"100%", height:"100%"}};
}
@MvcHtmlString.Create(FormFor<EmailTemplateController>(x => x.Save(null)).AddClass("dci_CRUD").ElementId("CRUDForm").ToString())
    <input type="hidden" id="EntityId" name="EntityId" value="@Model.EmailTemplate.EntityId" />
        <div class="col left">
            <div class="fieldRow">
                @Html.ViewFor(x=>x.Company.Name).LabelDisplay(WebLocalizationKeys.CLIENT_NAME).AddClassToRoot("first").ToHtmlTag()
            </div>
            <div class="fieldRow">
                @Html.SubmissionFor(x=>x.EmailTemplate.Name).AddClassToRoot("first").ToHtmlTag()
            </div>
            <div class="fieldRow">
                @Html.SubmissionFor(x => x.EmailTemplate.Description).ToHtmlTag()
            </div>
        </div>
        <div class="col full">
            <div class="fieldRow">
                <h2>@WebLocalizationKeys.DONT_CHANGE_EMAIL_TOKENS</h2>
            </div>
        </div>
        <div class="col left">
            <div class="fieldRow">
            @Html.SubmissionFor(x => x.EmailTemplate.ListOfTokenItems).AddClassToRoot("first").ToHtmlTag()
        </div>
        </div>
    <div class="col full">
        
        <div class="fieldRow">
            @Html.SubmissionFor(x => x.EmailTemplate.Body).AddClassToInput("rte").ToHtmlTag()
        </div>  
    </div>
@EndForm()
